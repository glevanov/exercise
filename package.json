{
  "name": "exercise",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:gh-pages": "pnpm vite build --base /exercise/",
    "preview": "vite preview",
    "test": "vitest run",
    "lint": "pnpm run lint:prettier && pnpm run lint:oxlint && pnpm run lint:tsc",
    "lint:ci": "pnpm run lint:prettier-check && pnpm run lint:oxlint && pnpm run lint:tsc",
    "lint:prettier": "prettier --write src",
    "lint:prettier-check": "prettier --check src",
    "lint:oxlint": "oxlint src --deny-warnings",
    "lint:tsc": "tsc --noEmit",
    "lint:setup-hooks": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged && pnpm run lint:tsc"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "oxlint --fix --deny-warnings"
    ],
    "*.css": [
      "prettier --write"
    ],
    "*.{json,yaml,yml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@xstate/react": "5.0.4",
    "classnames": "2.5.1",
    "preact": "10.26.6",
    "xstate": "5.19.3"
  },
  "devDependencies": {
    "@preact/preset-vite": "2.10.1",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/preact": "3.2.4",
    "happy-dom": "17.4.7",
    "lint-staged": "16.0.0",
    "oxlint": "0.18.1",
    "prettier": "3.5.3",
    "simple-git-hooks": "2.13.0",
    "typescript": "5.8.3",
    "vite": "6.3.5",
    "vitest": "3.1.3"
  },
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977"
}
