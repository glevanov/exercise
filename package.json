{
  "name": "exercise",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:gh-pages": "pnpm vite build --base /exercise/",
    "preview": "vite preview",
    "test": "vitest run",
    "lint": "pnpm run lint:prettier && pnpm run lint:oxlint && pnpm run lint:tsc",
    "lint:ci": "pnpm run lint:prettier-check && pnpm run lint:oxlint && pnpm run lint:tsc",
    "lint:prettier": "prettier --write src",
    "lint:prettier-check": "prettier --check src",
    "lint:oxlint": "oxlint src --deny-warnings",
    "lint:tsc": "tsc --noEmit",
    "lint:setup-hooks": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged && pnpm run lint:tsc"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "oxlint --fix --deny-warnings"
    ],
    "*.css": [
      "prettier --write"
    ],
    "*.{json,yaml,yml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@xstate/react": "5.0.4",
    "classnames": "2.5.1",
    "preact": "10.26.5",
    "xstate": "5.19.3"
  },
  "devDependencies": {
    "@preact/preset-vite": "2.10.1",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/preact": "3.2.4",
    "happy-dom": "17.4.7",
    "lint-staged": "15.5.1",
    "oxlint": "0.16.9",
    "prettier": "3.5.3",
    "simple-git-hooks": "2.13.0",
    "typescript": "5.8.3",
    "vite": "6.3.3",
    "vitest": "3.1.3"
  },
  "packageManager": "pnpm@10.10.0+sha512.d615db246fe70f25dcfea6d8d73dee782ce23e2245e3c4f6f888249fb568149318637dca73c2c5c8ef2a4ca0d5657fb9567188bfab47f566d1ee6ce987815c39"
}
